{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2016",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "stripInternal": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src"
  ]
}
